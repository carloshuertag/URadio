<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/icnGrp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:tint="?attr/colorPrimaryContainer"
            app:srcCompat="@mipmap/logo_foreground" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView2"
            android:layout_marginTop="-30dp"
            android:layout_marginBottom="-30dp"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:tint="?attr/colorPrimaryContainer"
            app:srcCompat="@mipmap/title_logo" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/idBtn"
        android:layout_width="347dp"
        android:layout_height="150dp"
        android:fontFamily="@font/mustica_pro_semi_bold"
        android:text="@string/idBtn"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/xplrBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icnGrp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/xplrBtn"
        android:layout_width="347dp"
        android:layout_height="150dp"
        android:fontFamily="@font/mustica_pro_semi_bold"
        android:text="@string/xplrBtn"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>